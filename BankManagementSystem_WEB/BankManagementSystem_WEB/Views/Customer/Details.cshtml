@model BankManagementSystem_WEB.ViewModels.CustomerDetailsViewModel

@{
    ViewBag.Title = "Customer Details";
}

<style>
    body {
        background-color: #f8f9fa;
        color: black;
    }

    h2 {
        color: #007bff;
        margin-top: 20px;
        text-align: center;
    }

    .details-container {
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 20px;
    }

        .details-container dl dt {
            font-weight: bold;
        }

        .details-container dl dd {
            margin-left: 0;
        }

    .account-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .account-table th,
        .account-table td {
            border: 1px solid #dee2e6;
            padding: 8px;
            text-align: left;
        }

        .account-table th {
            background-color: #007bff;
            color: white;
        }

        .account-table td {
            background-color: #f8f9fa;
        }

    .no-account-message {
        color: red;
        text-align: center;
        margin-top: 20px;
    }
</style>

<div class="details-container">
    <h2>Your Details</h2>
    <dl class="dl-horizontal">
        <dt>First Name</dt>
        <dd>@Model.Customer.FirstName</dd>

        <dt>Last Name</dt>
        <dd>@Model.Customer.LastName</dd>

        <dt>Email</dt>
        <dd>@Model.Customer.Email</dd>

        <dt>Address</dt>
        <dd>@Model.Customer.Address</dd>
    </dl>

    <h2>Accounts</h2>

    @if (Model.Accounts == null || !Model.Accounts.Any())
    {
        <p class="no-account-message">You don't have an account yet. To create one, please contact an employee.</p>
    }
    else
    {
        <table class="account-table">
            <thead>
                <tr>
                    <th>Account ID</th>
                    <th>Balance</th>
                    <th>Account Type</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model.Accounts)
                {
                    <tr>
                        <td>@Html.ActionLink(account.AccountId.ToString(), "Hub", "Account", new { id = account.AccountId }, null)</td>
                        <td>@account.Balance</td>
                        <td>@account.AccountType</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
