@{
    ViewBag.Title = "EmployeeHub";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Welcome to the Employee Hub</h1>
    <p class="lead text-center mb-5">Hello, Employee! Here are your options:</p>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Customer Statistics</h3>
                </div>
                <div class="card-body">
                    <canvas id="customerChart" style="width:100%; height:400px;"></canvas>
                    <div class="d-flex justify-content-center mt-3">
                        <a href="@Url.Action("CusList", "Customer")" class="btn btn-primary">View Customers</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">Account Statistics</h3>
                </div>
                <div class="card-body">
                    <canvas id="accountChart" style="width:100%; height:400px;"></canvas>
                    <div class="d-flex justify-content-center mt-3">
                        <a href="@Url.Action("AccList", "Account")" class="btn btn-success">View Accounts</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var customerCtx = document.getElementById('customerChart').getContext('2d');
            var customerChart = new Chart(customerCtx, {
                type: 'bar',
                data: {
                    labels: ['Customers'],
                    datasets: [{
                        label: 'Number of Customers',
                        data: [@ViewBag.CustomerCount],
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            var accountCtx = document.getElementById('accountChart').getContext('2d');
            var accountChart = new Chart(accountCtx, {
                type: 'bar',
                data: {
                    labels: ['Accounts'],
                    datasets: [{
                        label: 'Number of Accounts',
                        data: [@ViewBag.AccountCount],
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
}